{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommitsDisabled"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchFileNames": [".pre-commit-config.yaml"],
      "enabled": true,
      "automerge": true,
      "automergeType": "branch",
      "schedule": ["* * 1 * *"],
      "automergeSchedule": ["* * 1-3 * *"]
    }
  ],
  "pre-commit": {
    "enabled": true
  }
}
